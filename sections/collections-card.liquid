<section class="hover-section">
  <div class="hover-section__container">
    <!-- First Column (TOP) -->
    <a href="https://realblockkstar.com/collections/top" class="hover-section__column" style="background-image: url('https://cdn.shopify.com/s/files/1/0706/8313/2183/files/Mask_group.png?v=1730901040');">
      <div class="hover-section__overlay">
        <div class="hover-section__content">
          <h2 class="hover-section__title">TOP</h2>
          <span class="hover-section__button">BUY NOW</span>
        </div>
      </div>
    </a>

    <!-- Second Column (BOTTOM) -->
    <a href="https://realblockkstar.com/collections/bottom" class="hover-section__column" style="background-image: url('https://cdn.shopify.com/s/files/1/0706/8313/2183/files/Mask_group.jpg?v=1730902120');">
      <div class="hover-section__overlay">
        <div class="hover-section__content">
          <h2 class="hover-section__title">BOTTOM</h2>
          <span class="hover-section__button">BUY NOW</span>
        </div>
      </div>
    </a>
  </div>
</section>

<style>
  .hover-section {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
  }

  .hover-section__container {
    display: flex;
    width: 100%;
  }

  .hover-section__column {
    width: 50%;
    height: 100vh;
    background-size: cover;
    background-position: center;
    position: relative;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    text-decoration: none;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .hover-section__column:hover {
    transform: scale(1.05);
  }

  .hover-section__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    opacity: 0;
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    padding: 20px;
    transition: opacity 0.3s ease;
  }

  .hover-section__column:hover .hover-section__overlay {
    opacity: 1;
  }

  .hover-section__content {
    display: flex;
    align-items: center;
    width: 100%;
    justify-content: space-between;
  }

  .hover-section__title {
    font-family: 'Nunito Sans', sans-serif;
    font-size: 40.91px;
    font-weight: 400;
    line-height: 55.8px;
    letter-spacing: 0.1em;
    text-align: left;
    color: #fff;
    margin: 0;
  }

  .hover-section__button {
    font-family: 'Lato', sans-serif;
    font-size: 25.03px;
    font-weight: 500;
    line-height: 30.04px;
    letter-spacing: 0.15em;
    text-align: left;
    background-color: #fff;
    color: #000;
    padding: 10px 20px;
    text-decoration: none;
    transition: background-color 0.3s, color 0.3s;
  }

  .hover-section__button:hover {
    background-color: #000;
    color: #fff;
  }

  /* Responsive styling */
  @media (max-width: 768px) {
    .hover-section__column {
      width: 100%;
      height: 50vh;
    }

    .hover-section__title {
      font-size: 30px; /* Adjusted for smaller screens */
      line-height: 40px;
    }

    .hover-section__button {
      font-size: 18px; /* Adjusted for smaller screens */
      line-height: 24px;
      padding: 8px 16px;
    }
  }

  @media (max-width: 400px) {
    .hover-section__title {
      font-size: 20px;
      line-height: 28px;
    }

    .hover-section__button {
      font-size: 16px;
      line-height: 20px;
      padding: 6px 12px;
    }
  }
</style>
