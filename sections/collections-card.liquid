{% schema %}
{
  "name": "Collection Cards",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Section Title",
      "default": "Featured Collections"
    }
  ],
  "blocks": [
    {
      "type": "collection_card",
      "name": "Collection Card",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "SHOP NOW"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom",
      "blocks": [
        {
          "type": "collection_card"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="section-collection-cards padding-section">
  <div class="container">
    <h2 class="section-title">{{ section.settings.title }}</h2>
    <div class="collection-cards-wrapper grid--2-col-tablet-down">
      {% for block in section.blocks %}
        {% assign collection = collections[block.settings.collection] %}
        {% if collection %}
          <div class="collection-card">
            <a href="{{ collection.url }}" class="collection-link">
              {% render 'card-product',
                card_product: collection,
                show_vendor: false,
                media_aspect_ratio: 'portrait',
                image_shape: 'default',
                show_secondary_image: false,
                section_id: section.id
              %}
              <div class="collection-overlay">
                <div class="collection-info">
                  <h2 class="collection-title">{{ collection.title }}</h2>
                  <button class="collection-button">{{ block.settings.button_text }}</button>
                </div>
              </div>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
.section-collection-cards {
  padding-top: 20px;
  padding-bottom: 20px;
}

.container {
  max-width: 100%;
}

.collection-cards-wrapper {
  display: flex;
  flex-wrap: wrap;
}

.collection-card {
  position: relative;
  width: 50%;
  min-height: 300px;
}

.collection-link {
  display: block;
  position: relative;
  width: 100%;
  height: 100%;
  text-decoration: none;
}

.collection-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.collection-link:hover .collection-overlay {
  opacity: 1;
}

.collection-info {
  display: flex;
  align-items: center;
  color: #ffffff;
  width: 100%;
  justify-content: space-between;
  padding: 15px;
}

.collection-title {
  font-size: 1.5em;
  margin: 0;
}

.collection-button {
  background-color: #ffffff;
  color: #000000;
  border: none;
  padding: 10px 15px;
  cursor: pointer;
  font-size: 1em;
  transition: background-color 0.3s ease, color 0.3s ease;
}

.collection-button:hover {
  background-color: #000000;
  color: #ffffff;
}
</style>
