{% schema %}
{
  "name": "Collection Cards",
  "settings": [],
  "blocks": [
    {
      "type": "collection_card",
      "name": "Collection Card",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "SHOP NOW"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom",
      "blocks": [
        {
          "type": "collection_card"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="collection-cards-section">
  {% for block in section.blocks %}
    {% assign collection = collections[block.settings.collection] %}
    {% if collection and collection.image %}
      <div class="collection-card" style="background-image: url('{{ collection.image | image_url: 'master' }}');">
        <a href="{{ collection.url }}" class="collection-link">
          <div class="collection-overlay">
            <div class="collection-info">
              <h2 class="collection-title">{{ collection.title }}</h2>
              <button class="collection-button">{{ block.settings.button_text }}</button>
            </div>
          </div>
        </a>
      </div>
    {% endif %}
  {% endfor %}
</div>

<style>
.collection-cards-section {
  display: flex;
  flex-wrap: wrap;
  gap: 20px; /* Espaço entre os cartões */
}

.collection-card {
  position: relative;
  width: calc(50% - 10px); /* Espaçamento lateral */
  background-size: cover;
  background-position: center;
  height: 300px; /* Altura para exibir a imagem de fundo */
  display: flex;
  align-items: flex-end;
  overflow: hidden;
  border-radius: 10px; /* Bordas arredondadas para um visual mais agradável */
}

.collection-link {
  display: block;
  width: 100%;
  height: 100%;
  position: relative;
  text-decoration: none;
}

.collection-overlay {
  background: rgba(0, 0, 0, 0.5);
  width: 100%;
  padding: 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #ffffff;
}

.collection-title {
  font-size: 1.5em;
  margin: 0;
}

.collection-button {
  background-color: #ffffff;
  color: #000000;
  border: none;
  padding: 10px 15px;
  cursor: pointer;
  font-size: 1em;
  transition: background-color 0.3s ease, color 0.3s ease;
}

.collection-button:hover {
  background-color: #000000;
  color: #ffffff;
}
</style>
