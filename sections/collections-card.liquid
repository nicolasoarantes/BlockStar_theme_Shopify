{% schema %}
{
  "name": "Collection Cards Section",
  "settings": [],
  "blocks": [
    {
      "type": "collection_card",
      "name": "Collection Card",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "background_image",
          "label": "Background Image"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "SHOP NOW"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom",
      "blocks": [
        {
          "type": "collection_card"
        }
      ]
    }
  ]
}
{% endschema %}

<section class="collection-cards-section">
  <div class="container">
    <div class="collection-cards-wrapper">
      {% for block in section.blocks %}
        {% assign collection = collections[block.settings.collection] %}
        {% if collection %}
          <div class="collection-card" style="background-image: url('{{ block.settings.background_image | image_url: 'master' }}');">
            <a href="{{ collection.url }}" class="collection-link">
              <div class="collection-overlay">
                <div class="collection-info">
                  <h2 class="collection-title">{{ collection.title }}</h2>
                  <button class="collection-button">{{ block.settings.button_text }}</button>
                </div>
              </div>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
.collection-cards-section {
  padding: 0; /* Remove padding for full-width appearance */
}

.container {
  max-width: 100%; /* Full-width layout */
}

.collection-cards-wrapper {
  display: flex;
  flex-wrap: wrap;
}

.collection-card {
  position: relative;
  width: 50%;
  background-size: cover;
  background-position: center;
  height: auto;
  min-height: 300px; /* Define uma altura m√≠nima para o card */
}

.collection-link {
  display: block;
  position: relative;
  width: 100%;
  height: 100%;
  text-decoration: none;
}

.collection-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.collection-link:hover .collection-overlay {
  opacity: 1;
}

.collection-info {
  display: flex;
  align-items: center;
  color: #ffffff;
  width: 100%;
  justify-content: space-between;
  padding: 15px;
}

.collection-title {
  font-size: 1.5em;
  margin: 0;
}

.collection-button {
  background-color: #ffffff;
  color: #000000;
  border: none;
  padding: 10px 15px;
  cursor: pointer;
  font-size: 1em;
  transition: background-color 0.3s ease, color 0.3s ease;
}

.collection-button:hover {
  background-color: #000000;
  color: #ffffff;
}
</style>
