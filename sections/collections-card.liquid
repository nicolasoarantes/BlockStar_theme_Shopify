{% schema %}
{
  "name": "Collection Cards",
  "settings": [],
  "blocks": [
    {
      "type": "collection_card",
      "name": "Collection Card",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "SHOP NOW"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom",
      "blocks": [
        {
          "type": "collection_card"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="collection-cards-section">
  {% for block in section.blocks %}
    {% assign collection = collections[block.settings.collection] %}
    {% if collection and collection.featured_image %}
      <div class="collection-card" style="background-image: url('{{ collection.featured_image.src | image_url: 'master' }}');">
        <a href="{{ collection.url }}" class="collection-link">
          <div class="collection-overlay">
            <div class="collection-info">
              <h2 class="collection-title">{{ collection.title }}</h2>
              <button class="collection-button">{{ block.settings.button_text }}</button>
            </div>
          </div>
        </a>
      </div>
    {% endif %}
  {% endfor %}
</div>

<style>
.collection-cards-section {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.collection-card {
  position: relative;
  width: 50%; /* 50% da largura para cada card */
  height: 300px; /* Ajuste conforme necess√°rio */
  background-size: cover;
  background-position: center;
  transition: transform 0.3s ease;
}

.collection-card:hover {
  transform: scale(1.05);
}

.collection-link {
  display: block;
  width: 100%;
  height: 100%;
  position: relative;
}

.collection-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.collection-card:hover .collection-overlay {
  opacity: 1;
}

.collection-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 80%;
  color: #ffffff;
}

.collection-title {
  font-size: 1.5em;
  margin: 0;
}

.collection-button {
  background-color: #ffffff;
  color: #000000;
  border: none;
  padding: 10px 15px;
  cursor: pointer;
  font-size: 1em;
  transition: background-color 0.3s ease, color 0.3s ease;
}

.collection-button:hover {
  background-color: #000000;
  color: #ffffff;
}
</style>
