{% endschema %}

<section class="hover-section">
  <div class="hover-section__container">
    <!-- First Column (TOP) -->
    <div class="hover-section__column" style="background-image: url('https://cdn.shopify.com/s/files/1/0706/8313/2183/files/Mask_group.png?v=1730901040');">
      <div class="hover-section__overlay">
        <div class="hover-section__content">
          <h2>TOP</h2>
          <a href="https://realblockkstar.com/collections/top" class="hover-section__button">BUY NOW</a>
        </div>
      </div>
    </div>

    <!-- Second Column (BOTTOM) -->
    <div class="hover-section__column" style="background-image: url('https://cdn.shopify.com/s/files/1/0706/8313/2183/files/Mask_group.jpg?v=1730902120');">
      <div class="hover-section__overlay">
        <div class="hover-section__content">
          <h2>BOTTOM</h2>
          <a href="https://realblockkstar.com/collections/bottom" class="hover-section__button">BUY NOW</a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hover-section {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
  }

  .hover-section__container {
    display: flex;
    width: 100%;
  }

  .hover-section__column {
    width: 50%;
    height: 100vh;
    background-size: cover;
    background-position: center;
    position: relative;
  }

  .hover-section__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    opacity: 0;
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    padding: 20px;
    transition: opacity 0.3s ease;
  }

  .hover-section__column:hover .hover-section__overlay {
    opacity: 1;
  }

  .hover-section__content h2 {
    color: #fff;
    font-size: 2rem;
    margin: 0;
  }

  .hover-section__button {
    background-color: transparent;
    color: #fff;
    border: 2px solid #fff;
    padding: 10px 20px;
    text-decoration: none;
    font-weight: bold;
    transition: background-color 0.3s, color 0.3s;
  }

  .hover-section__button:hover {
    background-color: #fff;
    color: #000;
  }

  /* Responsive styling */
  @media (max-width: 768px) {
    .hover-section__column {
      width: 100%;
      height: 50vh;
    }
  }
</style>
